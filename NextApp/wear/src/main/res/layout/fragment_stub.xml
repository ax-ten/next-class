<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StubFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/teacherLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/vert_2"
            app:layout_constraintTop_toTopOf="@id/oriz_2">

            <TextView
                android:id="@+id/teacher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Teacher"
                android:textAppearance="@android:style/TextAppearance.Material.Display4"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/teacherText"
                android:layout_width="132dp"
                android:layout_height="30dp"
                android:text="RAGUSO Giovanna"
                android:textAppearance="@android:style/TextAppearance.Material.Body1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/teacher" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageButton
            android:id="@+id/imageView2"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:adjustViewBounds="true"
            android:background="@null"
            android:onClick="mapIntent"
            android:scaleType="fitCenter"
            android:src="@drawable/round_map_pic"
            app:layout_constraintStart_toStartOf="@id/vert_1"
            app:layout_constraintTop_toBottomOf="@id/oriz_1" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/vert_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="16dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/vert_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="64dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/vert_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="128dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/oriz_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="56dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/oriz_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="112dp" />

        <ImageButton
            android:id="@+id/teacherImageButton2"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:adjustViewBounds="true"
            android:background="@null"
            android:onClick="teacherIntent"
            android:scaleType="fitCenter"
            android:src="@drawable/round_profile_pic"
            app:layout_constraintStart_toStartOf="@id/vert_1"
            app:layout_constraintTop_toBottomOf="@id/oriz_2" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/classroomLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/vert_2"
            app:layout_constraintTop_toTopOf="@id/oriz_1">

            <TextView
                android:id="@+id/classroom_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="31"
                android:textAlignment="viewStart"
                android:textAppearance="@android:style/TextAppearance.Material.Body2"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/classroom" />

            <TextView
                android:id="@+id/classroom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Room"
                android:textAppearance="@android:style/TextAppearance.Material.Display4"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/timeLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/vert_3"
            app:layout_constraintTop_toBottomOf="@id/oriz_1">

            <TextView
                android:id="@+id/timeStart_text"
                android:layout_width="36dp"
                android:layout_height="wrap_content"
                android:text="8.30"
                android:textAlignment="viewEnd"
                android:textAppearance="@android:style/TextAppearance.Material.Body2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/TIme" />

            <TextView
                android:id="@+id/timeEnd_text"
                android:layout_width="36dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:text="11.00"
                android:textAlignment="viewEnd"
                android:textAppearance="@android:style/TextAppearance.Material.Body2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/timeStart_text" />

            <TextView
                android:id="@+id/TIme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/time"
                android:textAppearance="@android:style/TextAppearance.Material.Display4"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/coursenameLayout"
            android:layout_width="211dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/course_text"
                android:layout_width="0dp"
                android:layout_height="37dp"
                android:layout_marginStart="27dp"
                android:layout_marginEnd="27dp"
                android:text="Fondamenti di geometria e algebra"
                android:textAlignment="center"
                android:textAppearance="@android:style/TextAppearance.Material.Body2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Course" />

            <TextView
                android:id="@+id/Course"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="82dp"
                android:layout_marginEnd="87dp"
                android:text="@string/Course"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>
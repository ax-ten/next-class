<?xml version="1.0" encoding="utf-8"?>
<androidx.wear.widget.BoxInsetLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_grey"
    tools:context=".Wearable_MainActivity"
    tools:deviceIds="wear">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/classnameText"
            android:layout_width="159dp"
            android:layout_height="37dp"
            android:layout_marginStart="27dp"
            android:layout_marginEnd="27dp"
            android:text="Fondamenti di geometria e algebra"
            android:textAlignment="center"
            android:textAppearance="@android:style/TextAppearance.Material.Body2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/classname" />

        <TextView
            android:id="@+id/classname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="82dp"
            android:layout_marginEnd="87dp"
            android:text="@string/Course"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/classroom"
            android:layout_width="63dp"
            android:layout_height="17dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="17dp"
            android:text="@string/Room"
            android:textAppearance="@android:style/TextAppearance.Material.Display4"
            android:textSize="12sp"
            app:layout_constraintEnd_toStartOf="@+id/classroom2"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            app:layout_constraintTop_toBottomOf="@+id/classnameText" />

        <TextView
            android:id="@+id/classroom_text"
            android:layout_width="60dp"
            android:layout_height="29dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="18dp"
            android:text="31"
            android:textAlignment="viewStart"
            android:textAppearance="@android:style/TextAppearance.Material.Body2"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/teacherLayout"
            app:layout_constraintEnd_toStartOf="@+id/classroom_text2"
            app:layout_constraintStart_toEndOf="@+id/imageView" />

        <TextView
            android:id="@+id/classroom2"
            android:layout_width="27dp"
            android:layout_height="16dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="43dp"
            android:text="@string/time"
            android:textAppearance="@android:style/TextAppearance.Material.Display4"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/classnameText" />

        <TextView
            android:id="@+id/classroom_text2"
            android:layout_width="36dp"
            android:layout_height="19dp"
            android:layout_marginEnd="34dp"
            android:text="8.30"
            android:textAlignment="viewEnd"
            android:textAppearance="@android:style/TextAppearance.Material.Body2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/classroom2" />

        <TextView
            android:id="@+id/classroom_text3"
            android:layout_width="36dp"
            android:layout_height="20dp"
            android:layout_marginEnd="34dp"
            android:text="11.00"
            android:textAlignment="viewEnd"
            android:textAppearance="@android:style/TextAppearance.Material.Body2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/classroom_text2" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/teacherLayout"
            android:layout_width="141dp"
            android:layout_height="50dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="9dp"
            android:layout_marginBottom="3dp"
            app:layout_constraintBottom_toTopOf="@+id/buttonLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView2">

            <TextView
                android:id="@+id/teacher"
                android:layout_width="63dp"
                android:layout_height="17dp"
                android:layout_marginEnd="80dp"
                android:text="@string/Teacher"
                android:textAppearance="@android:style/TextAppearance.Material.Display4"
                android:textSize="12sp"
                app:layout_constraintBottom_toTopOf="@+id/teacherText"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/teacherText"
                android:layout_width="132dp"
                android:layout_height="30dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="9dp"
                android:layout_marginBottom="6dp"
                android:text="RAGUSO Giovanna"
                android:textAppearance="@android:style/TextAppearance.Material.Body1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/teacher" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/buttonLayout"
            android:layout_width="174dp"
            android:layout_height="44dp"
            android:layout_marginStart="19dp"
            android:layout_marginEnd="20dp"
            android:background="#3F51B5"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">
            android:backgroud="@color"

            <TextView
                android:id="@+id/buttonText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="63dp"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="62dp"
                android:layout_marginBottom="5dp"
                android:text="@string/app_name"
                android:textAppearance="@android:style/TextAppearance.Material.Body1"
                android:textSize="24sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="1dp"
            android:src="@drawable/roundMapPic"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/classnameText" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/roundProfilePic"
            app:layout_constraintBottom_toTopOf="@+id/buttonLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="115dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="15dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="63dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="143dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="56dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.wear.widget.BoxInsetLayout>

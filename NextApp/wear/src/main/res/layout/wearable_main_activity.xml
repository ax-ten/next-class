<?xml version="1.0" encoding="utf-8"?>
<androidx.wear.widget.BoxInsetLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_grey"
    tools:context=".Wearable_MainActivity"
    tools:deviceIds="wear">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="129dp"
            android:layout_height="170dp"
            app:layout_constraintBottom_toTopOf="@+id/buttonLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/constraintLayout"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/teacherLayout"
                android:layout_width="132dp"
                android:layout_height="49dp"
                android:layout_marginTop="14dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/roomLayout">

                <TextView
                    android:id="@+id/teacherText"
                    android:layout_width="122dp"
                    android:layout_height="21dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="6dp"
                    android:layout_marginBottom="8dp"
                    android:text="@string/valoreY"
                    android:textAppearance="@android:style/TextAppearance.Material.Body1"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/teacher" />

                <TextView
                    android:id="@+id/teacher"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="1dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginEnd="82dp"
                    android:text="@string/Teacher"
                    app:layout_constraintBottom_toTopOf="@+id/teacherText"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/roomLayout"
                android:layout_width="131dp"
                android:layout_height="39dp"
                android:layout_marginBottom="6dp"
                app:layout_constraintBottom_toTopOf="@+id/teacherLayout"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/classnameLayout">

                <TextView
                    android:id="@+id/classroom"
                    android:layout_width="74dp"
                    android:layout_height="22dp"
                    android:layout_marginStart="2dp"
                    android:text="@string/Room"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toTopOf="@+id/timeStub"
                    app:layout_constraintEnd_toStartOf="@+id/classroom_text"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/timeStub"
                    android:layout_width="122dp"
                    android:layout_height="15dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="4dp"
                    android:layout_marginBottom="2dp"
                    android:text="@string/StartTime"
                    android:textAppearance="@android:style/TextAppearance.Material.Display3"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/classroom" />

                <TextView
                    android:id="@+id/classroom_text"
                    android:layout_width="55dp"
                    android:layout_height="22dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginEnd="1dp"
                    android:layout_marginBottom="1dp"
                    android:text="@string/valoreZ"
                    android:textAppearance="@android:style/TextAppearance.Material.Body1"
                    app:layout_constraintBottom_toTopOf="@+id/timeStub"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/classroom"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/classnameLayout"
                android:layout_width="129dp"
                android:layout_height="67dp"
                android:layout_marginTop="1dp"
                app:layout_constraintBottom_toTopOf="@+id/roomLayout"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/classnameText"
                    android:layout_width="101dp"
                    android:layout_height="36dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="23dp"
                    android:layout_marginBottom="1dp"
                    android:text="@string/valoreX"
                    android:textAppearance="@android:style/TextAppearance.Material.Body1"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/classname" />

                <TextView
                    android:id="@+id/classname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="1dp"
                    android:layout_marginTop="11dp"
                    android:layout_marginEnd="84dp"
                    android:text="@string/Course"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="85dp"
            android:layout_height="170dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/teacher_icon"
                android:layout_width="87dp"
                android:layout_height="87dp"
                android:layout_marginStart="8dp"
                android:src="@tools:sample/avatars[6]"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/map_icon"
                app:layout_constraintVertical_bias="0.0" />

            <ImageView
                android:id="@+id/map_icon"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:clickable="true"
                android:src="@drawable/polibamap"
                app:layout_constraintBottom_toTopOf="@+id/teacher_icon"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/buttonLayout"
            android:layout_width="174dp"
            android:layout_height="44dp"
            android:layout_marginStart="19dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="20dp"
            android:background="#3F51B5"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout">
            android:backgroud="@color"

            <TextView
                android:id="@+id/buttonText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="63dp"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="62dp"
                android:layout_marginBottom="5dp"
                android:text="@string/app_name"
                android:textAppearance="@android:style/TextAppearance.Material.Body1"
                android:textSize="24sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.wear.widget.BoxInsetLayout>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/settings"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="683dp"
            android:layout_height="792dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.54"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@color/colorPrimary" />

        <Switch
            android:id="@+id/switch3"
            android:layout_width="329dp"
            android:layout_height="78dp"
            android:switchTextAppearance="@style/TextAppearance.AppCompat.Large"
            android:text="@string/attiva_notifiche"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            tools:layout_editor_absoluteX="37dp"
            tools:layout_editor_absoluteY="188dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="330dp"
            android:layout_height="67dp"
            android:text="Minuti anticipo"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            tools:layout_editor_absoluteX="36dp"
            tools:layout_editor_absoluteY="305dp" />

        <Button
            android:id="@+id/button3"
            android:layout_width="58dp"
            android:layout_height="37dp"
            android:text="edit"
            tools:layout_editor_absoluteX="308dp"
            tools:layout_editor_absoluteY="314dp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="249dp"
            android:layout_height="62dp"
            android:text="Seleziona lingua"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            tools:layout_editor_absoluteX="35dp"
            tools:layout_editor_absoluteY="408dp" />

        <Button
            android:id="@+id/button4"
            android:layout_width="83dp"
            android:layout_height="41dp"
            android:text="Change"
            tools:layout_editor_absoluteX="293dp"
            tools:layout_editor_absoluteY="419dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</RelativeLayout>
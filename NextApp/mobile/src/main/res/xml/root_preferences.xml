<!-- TODO spostare le icone in corrispondenza degli oggetti e non dei titoli -->
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        app:icon="@drawable/ic_notifications"
        app:title="@string/Notifications">
        <SwitchPreference
            android:defaultValue="true"
            android:key="notifications"
            android:title="@string/Notifications" />
        <EditTextPreference
            android:id="@+id/minutes"
            android:defaultValue="7"
            android:dependency="notifications"
            android:key="minutes"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="Set minutes in advance "/>
    </PreferenceCategory>

    <PreferenceCategory
        app:icon="@drawable/ic_sync"
        app:title="Sync">

        <SwitchPreferenceCompat
            android:id="@+id/sync"
            android:defaultValue="true"
            android:key="sync"
            app:key="sync"
            app:title="Look for schedule updates " />

        <EditTextPreference
            android:id="@+id/every_x_days"
            android:defaultValue="7"
            android:dependency="sync"
            android:key="days"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="Set time period in days " />

    </PreferenceCategory>
    <PreferenceCategory
        android:title="Other"
        app:icon="@drawable/ic_language">

        <ListPreference
            android:defaultValue="false"
            android:entries="@array/languages"
            android:entryValues="@array/languageAlias"
            android:key="language"
            android:title="Language" />
    </PreferenceCategory>

</PreferenceScreen>
